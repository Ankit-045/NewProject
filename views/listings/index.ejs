<% layout("./layouts/boilerplate") -%>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 3rem;
    display: flex;
    align-items: center;
  }
</style>
<form action="/listings" method="GET" class="mb-4" style="max-width: 400px; margin: 2rem auto 0 auto; display: flex;">
  <input type="text" name="q" class="form-control" placeholder="Search listings..." value="<%= q ? q : '' %>" style="flex: 1; margin-right: 0.5rem;">
  <% if (category) { %>
    <input type="hidden" name="category" value="<%= category %>">
  <% } %>
  <button type="submit" class="btn btn-primary">Search</button>
</form>
<div id="filters">
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=All" class="filter <%= (!category || category === 'All') ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-globe"></i></div>
    <p>All</p>
  </a>
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=Trending" class="filter <%= category === 'Trending' ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=Rooms" class="filter <%= category === 'Rooms' ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=Iconic cities" class="filter <%= category === 'Iconic cities' ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic cities</p>
  </a>
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=Mountauns" class="filter <%= category === 'Mountauns' ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </a>
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=Castles" class="filter <%= category === 'Castles' ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-chess-rook"></i></div>
    <p>Castles</p>
  </a>
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=Amazing Pools" class="filter <%= category === 'Amazing Pools' ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </a>
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=Camping" class="filter <%= category === 'Camping' ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </a>
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=Farms" class="filter <%= category === 'Farms' ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </a>
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=Arctic" class="filter <%= category === 'Arctic' ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arctic</p>
  </a>
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=Domes" class="filter <%= category === 'Domes' ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </a>
  <a href="/listings?<% if (q) { %>q=<%= encodeURIComponent(q) %>&<% } %>category=Boats" class="filter <%= category === 'Boats' ? 'fw-bold text-primary' : '' %>">
    <div><i class="fa-solid fa-sailboat"></i></div>
    <p>Boats</p>
  </a>
  <div class="tax-toggle">
    <div class="form-check form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings){ %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url%>"
        class="card-img-top"
        alt="Listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %></b> <br />

          &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") :
          "N/A" %> / night
          <i class="tax-info">&nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% }%>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
    console.log(taxInfo);
  });
</script>
